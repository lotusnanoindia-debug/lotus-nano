---
import { Icon } from 'astro-icon/components';
import NewsletterForm from './NewsletterForm.astro';
---

<footer class="border-t border-stone-800/50 bg-stone-900">
  <div class="mx-auto max-w-7xl px-6 py-16 lg:px-12 lg:py-20">
    <!-- Single Row Layout -->
    <div class="mb-12 grid items-start gap-12 lg:grid-cols-12 lg:gap-16">
      <!-- Logo + Contact -->
      <div class="lg:col-span-4">
        <a
          href="/"
          class="group mb-4 inline-flex items-center gap-1"
          title="Home - Lotus Nano"
        >
          <span
            class="text-2xl font-black tracking-tight text-stone-100 transition-colors duration-300 group-hover:text-amber-400"
          >
            lotus nano
          </span>
          <span class="mb-1 text-3xl font-black leading-none text-teal-500"
            >.</span
          >
        </a>

        <p class="mb-8 text-sm leading-relaxed text-stone-500">
          PFAS Solutions from Sourcing Experts.
        </p>

        <!-- Contact -->
        <div class="mb-8 space-y-3">
          <a
            href="tel:+919579103930"
            class="group flex items-center gap-3 text-sm text-stone-400 transition-colors hover:text-amber-400"
          >
            <Icon
              name="mdi:phone"
              class="h-4 w-4 text-stone-600 transition-colors group-hover:text-amber-400"
            />
            <span>(+91) 95791 03930</span>
          </a>
          <a
            href="mailto:info@lotus-nano.com"
            class="group flex items-center gap-3 text-sm text-stone-400 transition-colors hover:text-amber-400"
          >
            <Icon
              name="mdi:email"
              class="h-4 w-4 text-stone-600 transition-colors group-hover:text-amber-400"
            />
            <span>info@lotus-nano.com</span>
          </a>
        </div>

        <!-- Social -->
        <div class="flex items-center gap-4">
          <a
            href="https://www.linkedin.com/company/lotus-nano"
            target="_blank"
            rel="noopener noreferrer"
            class="text-stone-500 transition-colors hover:text-amber-400"
            title="Lotus Nano on LinkedIn"
          >
            <Icon name="mdi:linkedin" class="h-5 w-5" />
          </a>
          <a
            href="/rss.xml"
            target="_blank"
            class="text-stone-500 transition-colors hover:text-orange-400"
            title="Lotus Nano RSS Feed"
          >
            <Icon name="mdi:rss" class="h-5 w-5" />
          </a>
        </div>
      </div>

      <!-- Navigation -->
      <div class="grid grid-cols-2 gap-8 lg:col-span-4">
        <div>
          <h4
            class="mb-4 text-xs font-bold uppercase tracking-wider text-stone-400"
          >
            Navigate
          </h4>
          <ul class="space-y-2.5">
            <li>
              <a
                href="/pfas-alternatives-sourcing"
                class="text-sm text-stone-500 transition-colors hover:text-amber-400"
              >
                PFAS-Free Sourcing
              </a>
            </li>
            <li>
              <a
                href="/pfas-management-services"
                class="text-sm text-stone-500 transition-colors hover:text-amber-400"
              >
                PFAS Management
              </a>
            </li>
            <li>
              <a
                href="/intelligence"
                class="text-sm text-stone-500 transition-colors hover:text-amber-400"
              >
                Intelligence
              </a>
            </li>
            <li>
              <a
                href="/working-with-us"
                class="text-sm text-stone-500 transition-colors hover:text-amber-400"
              >
                Working With Us
              </a>
            </li>
          </ul>
        </div>

        <div>
          <h4
            class="mb-4 text-xs font-bold uppercase tracking-wider text-stone-400"
          >
            More
          </h4>
          <ul class="space-y-2.5">
            <li>
              <a
                href="/privacy"
                class="text-sm text-stone-500 transition-colors hover:text-amber-400"
              >
                Privacy
              </a>
            </li>
            <li>
              <a
                href="/terms-of-service"
                class="text-sm text-stone-500 transition-colors hover:text-amber-400"
              >
                Terms of Service
              </a>
            </li>
            <li
              class="cursor-pointer text-sm text-stone-500 transition-colors hover:text-amber-400"
              data-fillout-id="8F9rw7E4UBus"
              data-fillout-embed-type="popup"
              data-fillout-dynamic-resize
              data-fillout-popup-size="medium"
            >
              Contact Us
            </li>
          </ul>
        </div>
      </div>

      <!-- Newsletter -->
      <div class="lg:col-span-4">
        <h4
          class="mb-4 text-xs font-bold uppercase tracking-wider text-stone-400"
        >
          Stay Informed
        </h4>

        <NewsletterForm formId="newsletter-footer" source="Newsletter" />
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-stone-800/50 pt-8 text-center">
      <p class="text-xs text-stone-600">
        Â© {new Date().getFullYear()} Lotus Nano. Registered in India.
      </p>
    </div>
  </div>
</footer>
