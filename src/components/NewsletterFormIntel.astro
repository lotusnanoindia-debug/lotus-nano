---
interface Props {
  formId?: string;
}

const { formId = 'newsletter-intel' } = Astro.props;
---

<div class="w-full max-w-2xl lg:ml-auto">
  <form
    id={formId}
    data-newsletter-form
    data-source="Intel"
    class="group relative"
  >
    <input
      type="email"
      name="email"
      placeholder="your@company.com"
      required
      class="w-full border-b-2 border-stone-700 bg-stone-900/50 py-5 text-lg text-stone-200 backdrop-blur-sm transition-all duration-300 placeholder:text-stone-600 focus:border-amber-600 focus:outline-none"
    />

    <div class="absolute -left-[5000px]" aria-hidden="true">
      <input type="text" name="honeypot" tabindex="-1" autocomplete="off" />
    </div>

    <input type="hidden" name="timestamp" value="" />

    <button
      type="submit"
      class="absolute right-2 top-1/2 -translate-y-1/2 border border-stone-800 p-3 text-sm font-medium text-stone-500 transition-colors duration-300 hover:bg-amber-500"
    >
      Subscribe â†’
    </button>
  </form>

  <p class="mt-3 text-xs text-stone-600" id={`msg-${formId}`}>
    We email when there's signal. No spam. Unsubscribe anytime.
  </p>
</div>
