// No props needed yet
---

<header
  class="fixed left-0 right-0 top-0 z-50 border-b border-neutral-200 bg-white/80 backdrop-blur-md transition-colors dark:border-neutral-800 dark:bg-neutral-950/80"
>
  <div class="container mx-auto px-6 lg:px-8">
    <nav class="flex h-20 items-center justify-between">
      <!-- Logo -->
      <a href="/" class="group flex items-center space-x-3">
        <div
          class="flex h-10 w-10 items-center justify-center rounded-lg bg-gradient-to-br from-neutral-800 to-neutral-600 transition-transform group-hover:scale-105 dark:from-neutral-200 dark:to-neutral-400"
        >
          <span class="text-xl font-semibold text-white dark:text-neutral-900"
            >M</span
          >
        </div>
        <span class="hidden text-xl font-semibold tracking-tight sm:block"
          >Metaphors</span
        >
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden items-center space-x-8 lg:flex">
        <a
          href="/work"
          class="text-sm font-medium text-neutral-600 transition-colors hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100"
        >
          Our Work
        </a>
        <a
          href="/services"
          class="text-sm font-medium text-neutral-600 transition-colors hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100"
        >
          Services
        </a>
        <a
          href="/process"
          class="text-sm font-medium text-neutral-600 transition-colors hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100"
        >
          How We Work
        </a>
        <a
          href="/about"
          class="text-sm font-medium text-neutral-600 transition-colors hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100"
        >
          About
        </a>
      </div>

      <!-- Right Side: Theme Toggle + CTA -->
      <div class="flex items-center space-x-4">
        <!-- Theme Toggle -->
        <button
          id="theme-toggle"
          class="flex h-10 w-10 items-center justify-center rounded-lg bg-neutral-100 transition-colors hover:bg-neutral-200 dark:bg-neutral-900 dark:hover:bg-neutral-800"
          aria-label="Toggle theme"
        >
          <!-- Sun Icon (shows in dark mode) -->
          <svg
            class="hidden h-5 w-5 dark:block"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
            ></path>
          </svg>
          <!-- Moon Icon (shows in light mode) -->
          <svg
            class="block h-5 w-5 dark:hidden"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
            ></path>
          </svg>
        </button>

        <!-- CTA Button -->
        <a
          href="/contact"
          class="hidden items-center rounded-lg bg-neutral-900 px-6 py-2.5 text-sm font-semibold text-white transition-all hover:bg-neutral-800 hover:shadow-lg sm:inline-flex dark:bg-neutral-100 dark:text-neutral-900 dark:hover:bg-neutral-200"
        >
          Start a Conversation
        </a>

        <!-- Mobile Menu Toggle -->
        <button
          id="mobile-menu-toggle"
          class="flex h-10 w-10 items-center justify-center rounded-lg bg-neutral-100 lg:hidden dark:bg-neutral-900"
          aria-label="Toggle menu"
        >
          <svg
            class="h-6 w-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </nav>

    <!-- Mobile Menu (hidden by default) -->
    <div
      id="mobile-menu"
      class="hidden border-t border-neutral-200 py-6 lg:hidden dark:border-neutral-800"
    >
      <div class="flex flex-col space-y-4">
        <a
          href="/work"
          class="text-base font-medium text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100"
        >
          Our Work
        </a>
        <a
          href="/services"
          class="text-base font-medium text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100"
        >
          Services
        </a>
        <a
          href="/process"
          class="text-base font-medium text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100"
        >
          How We Work
        </a>
        <a
          href="/about"
          class="text-base font-medium text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-100"
        >
          About
        </a>
        <a
          href="/contact"
          class="inline-flex items-center justify-center rounded-lg bg-neutral-900 px-6 py-3 text-base font-semibold text-white dark:bg-neutral-100 dark:text-neutral-900"
        >
          Start a Conversation
        </a>
      </div>
    </div>
  </div>
</header>

<!-- Mobile menu toggle script -->
<script>
  function initMobileMenu() {
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');

    if (!toggle || !menu) return;

    toggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }

  initMobileMenu();
  document.addEventListener('astro:page-load', initMobileMenu);
</script>
