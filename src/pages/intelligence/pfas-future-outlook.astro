---
import BaseLayout from '../../layout/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
import { blogPosts } from '../../data/blogPosts';
import MoreIntelligence from '../../components/MoreIntelligence.astro';
import IntelCTA from '../../components/IntelCTA.astro';

const article = blogPosts.find(
  (post) => post.url === '/intelligence/pfas-future-outlook'
);

if (!article) {
  throw new Error('Article metadata not found in blogPosts.ts');
}

// Format date as "MMM YYYY" (e.g., "Aug 2025")
const publishDateFormatted = new Date(
  article.publishDateFull
).toLocaleDateString('en-GB', {
  month: 'short',
  year: 'numeric',
});

// Current date for dateModified
const currentDate = new Date().toISOString().split('T')[0];

const jsonLd = [
  {
    '@context': 'https://schema.org',
    '@type': 'Article',
    '@id': `https://lotus-nano.com${article.url}#article`,
    headline: article.blogtitle,
    description: article.blogdescr,
    image: {
      '@type': 'ImageObject',
      url: article.img,
      width: 1200,
      height: 630,
    },
    author: {
      '@type': 'Person',
      '@id': `https://lotus-nano.com${article.url}#author`,
      name: article.authorName,
      jobTitle: article.authorRole,
      image: {
        '@type': 'ImageObject',
        url: article.authorImage,
      },
    },
    publisher: {
      '@id': 'https://lotus-nano.com/#organization',
    },
    datePublished: article.publishDateFull,
    dateModified: currentDate,
    mainEntityOfPage: {
      '@type': 'WebPage',
      '@id': `https://lotus-nano.com${article.url}`,
    },
    isPartOf: {
      '@id': 'https://lotus-nano.com/intelligence#blog',
    },
    inLanguage: 'en-GB',
    articleSection: article.categoryFull,
  },
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    '@id': `https://lotus-nano.com${article.url}#breadcrumb`,
    itemListElement: [
      {
        '@type': 'ListItem',
        position: 1,
        name: 'Home',
        item: 'https://lotus-nano.com',
      },
      {
        '@type': 'ListItem',
        position: 2,
        name: 'Intelligence',
        item: 'https://lotus-nano.com/intelligence',
      },
      {
        '@type': 'ListItem',
        position: 3,
        name: article.blogtitle,
        item: `https://lotus-nano.com${article.url}`,
      },
    ],
  },
];
---

<BaseLayout
  title={article.blogtitle}
  description={article.blogdescr}
  canonical={`https://lotus-nano.com${article.url}`}
  ogImage={article.img}
  ogType="article"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    <meta property="article:author" content={article.authorName} />
    <meta property="article:published_time" content={article.publishDateFull} />
    <meta property="article:modified_time" content={currentDate} />
    <meta property="article:section" content={article.categoryFull} />
  </Fragment>

  <article class="bg-stone-900">
    <!-- Hero Image -->
    <section class="relative h-[70vh] min-h-[500px] overflow-hidden">
      <img
        src={article.img}
        alt={article.blogtitle}
        class="absolute inset-0 h-full w-full object-cover"
        loading="eager"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-stone-900 via-stone-900/60 to-transparent"
      >
      </div>
    </section>

    <!-- Header -->
    <section class="relative -mt-32 pb-24">
      <div class="mx-auto max-w-4xl px-6 lg:px-8">
        <!-- Meta -->
        <div class="mb-8 flex items-center justify-between text-sm">
          <div class="flex items-center gap-3">
            <span class="font-semibold text-amber-400"
              >{article.categoryFull}</span
            >
            <span class="text-stone-600">·</span>
            <span class="text-stone-500">{publishDateFormatted}</span>
            <span class="text-stone-600">·</span>
            <span class="text-stone-500">{article.readTime} read</span>
          </div>
          <a
            href="/intelligence"
            class="text-stone-500 transition-colors hover:text-stone-300"
            >← Intelligence</a
          >
        </div>

        <!-- Title -->
        <h1
          class="mb-8 text-5xl font-black leading-[0.95] tracking-tighter text-stone-100 lg:text-7xl"
        >
          {article.blogtitle}
        </h1>

        <!-- Subtitle -->
        <p
          class="mb-16 text-2xl font-light leading-relaxed text-stone-400 lg:text-3xl"
        >
          {article.blogdescr}
        </p>

        <!-- Author -->
        <div class="flex items-center gap-4 border-t border-stone-800 pt-8">
          <img
            src={article.authorImage}
            alt={article.authorName}
            class="h-12 w-12 rounded-full"
            width="48"
            height="48"
          />
          <div>
            <div class="font-semibold text-stone-200">{article.authorName}</div>
            <div class="text-sm text-stone-500">{article.authorRole}</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Executive Summary -->
    <section class="pb-24">
      <div class="mx-auto max-w-3xl px-6 lg:px-8">
        <div class="rounded-xl border-l-4 border-amber-400 bg-stone-800/30 p-8">
          <p class="mb-6 text-2xl font-light leading-relaxed text-stone-200">
            "Phasing out PFAS becomes mandatory. Strategic planning determines
            whether organisations lead this transformation or scramble to
            comply."
          </p>
          <p class="text-lg leading-relaxed text-stone-400">
            Between 2025 and 2035, PFAS regulations will fundamentally reshape
            manufacturing, supply chains, and competitive dynamics across
            industries. Organisations treating this as distant regulatory
            speculation rather than imminent operational reality face market
            displacement, compliance crises, and competitive disadvantage.
          </p>
        </div>
      </div>
    </section>

    <!-- Introduction -->
    <section class="pb-24">
      <div class="mx-auto max-w-3xl px-6 lg:px-8">
        <div class="space-y-6 text-lg leading-relaxed text-stone-400">
          <p>
            Regulatory frameworks worldwide are converging toward comprehensive
            PFAS restrictions that extend beyond specific compounds to entire
            chemical families. What began as targeted bans on legacy substances
            has evolved into systematic elimination affecting thousands of
            materials across manufacturing sectors.
          </p>

          <p>
            This outlook synthesises regulatory developments, technology trends,
            market forces, and strategic implications into actionable timelines
            for organisations navigating PFAS transition. Three scenario
            analyses illuminate possible futures ranging from coordinated global
            restrictions to fragmented regional approaches, each carrying
            distinct strategic implications.
          </p>

          <p class="text-xl font-medium text-stone-300">
            Understanding regulatory trajectory enables proactive positioning
            rather than reactive compliance—the difference between leading
            market transformation and scrambling to maintain operations under
            enforcement pressure.
          </p>
        </div>
      </div>
    </section>

    <!-- Regulatory Convergence -->
    <section class="pb-24">
      <div class="mx-auto max-w-5xl px-6 lg:px-8">
        <h2 class="mb-8 text-3xl font-black text-stone-100">
          Global Regulatory Convergence
        </h2>

        <div class="mb-12 space-y-6 text-lg leading-relaxed text-stone-400">
          <p>
            Regulatory momentum has shifted from incremental compound-specific
            restrictions toward comprehensive class-based bans. The European
            Union's universal PFAS restriction proposal exemplifies this
            evolution—targeting over 10,000 substances simultaneously rather
            than addressing individual chemicals sequentially.
          </p>

          <p>
            This regulatory convergence reflects scientific consensus about PFAS
            persistence, bioaccumulation, and environmental harm extending
            across entire chemical families. Jurisdictions implementing
            restrictions increasingly adopt similar frameworks, timelines, and
            enforcement approaches despite political and economic differences.
          </p>
        </div>

        <!-- Regulatory Phases -->
        <div class="space-y-6">
          <h3 class="text-2xl font-bold text-stone-200">
            Six Regulatory Phases (2025–2035)
          </h3>

          <div class="space-y-4">
            <!-- Phase 1 -->
            <details
              class="group rounded-xl border border-stone-800 bg-stone-800/30"
            >
              <summary
                class="flex cursor-pointer items-center justify-between p-6 font-semibold text-stone-200 hover:text-amber-400"
              >
                <div class="flex items-center gap-4">
                  <span
                    class="flex h-10 w-10 items-center justify-center rounded-full bg-amber-400/10 text-sm font-black text-amber-400"
                    >01</span
                  >
                  <div>
                    <div>2025–2026: Early Adopter Restrictions</div>
                    <div class="text-sm font-normal text-stone-400">
                      Probability: 95%
                    </div>
                  </div>
                </div>
                <span
                  class="text-sm text-stone-500 transition-transform group-open:rotate-180"
                  >▼</span
                >
              </summary>
              <div
                class="space-y-4 border-t border-stone-800 p-6 text-stone-400"
              >
                <p class="leading-relaxed">
                  Nordic countries (Denmark, Norway, Sweden) and progressive US
                  states (California, Maine, Minnesota) implement comprehensive
                  PFAS bans affecting consumer products and food packaging.
                  Enforcement begins creating market pressure extending beyond
                  restricted jurisdictions as retailers and manufacturers avoid
                  dual inventory systems.
                </p>
                <div
                  class="rounded border border-stone-700 bg-stone-900/50 p-4"
                >
                  <h5 class="mb-2 font-semibold text-stone-300">
                    Strategic Implication
                  </h5>
                  <p class="text-sm leading-relaxed">
                    Early movers establish PFAS-free capabilities whilst
                    competitors remain dependent on restricted materials.
                    First-mover advantages compound as market preference shifts
                    toward verified alternatives.
                  </p>
                </div>
              </div>
            </details>

            <!-- Phase 2 -->
            <details
              class="group rounded-xl border border-stone-800 bg-stone-800/30"
            >
              <summary
                class="flex cursor-pointer items-center justify-between p-6 font-semibold text-stone-200 hover:text-amber-400"
              >
                <div class="flex items-center gap-4">
                  <span
                    class="flex h-10 w-10 items-center justify-center rounded-full bg-amber-400/10 text-sm font-black text-amber-400"
                    >02</span
                  >
                  <div>
                    <div>2027–2028: EU Universal Restriction</div>
                    <div class="text-sm font-normal text-stone-400">
                      Probability: 85%
                    </div>
                  </div>
                </div>
                <span
                  class="text-sm text-stone-500 transition-transform group-open:rotate-180"
                  >▼</span
                >
              </summary>
              <div
                class="space-y-4 border-t border-stone-800 p-6 text-stone-400"
              >
                <p class="leading-relaxed">
                  European Chemicals Agency (ECHA) finalises universal PFAS
                  restriction under REACH regulation, targeting all per- and
                  polyfluoroalkyl substances. Transition periods vary by
                  application: 18 months for consumer products, 5 years for
                  industrial applications, 12 years for critical uses where
                  alternatives remain unproven.
                </p>
                <div
                  class="rounded border border-stone-700 bg-stone-900/50 p-4"
                >
                  <h5 class="mb-2 font-semibold text-stone-300">
                    Strategic Implication
                  </h5>
                  <p class="text-sm leading-relaxed">
                    EU market access requires verified PFAS-free status.
                    Organisations without transition strategies face immediate
                    compliance crises. Supply chains supplying EU markets
                    experience cascading pressure regardless of headquarters
                    location.
                  </p>
                </div>
              </div>
            </details>

            <!-- Phase 3 -->
            <details
              class="group rounded-xl border border-stone-800 bg-stone-800/30"
            >
              <summary
                class="flex cursor-pointer items-center justify-between p-6 font-semibold text-stone-200 hover:text-amber-400"
              >
                <div class="flex items-center gap-4">
                  <span
                    class="flex h-10 w-10 items-center justify-center rounded-full bg-amber-400/10 text-sm font-black text-amber-400"
                    >03</span
                  >
                  <div>
                    <div>2028–2029: North American Expansion</div>
                    <div class="text-sm font-normal text-stone-400">
                      Probability: 75%
                    </div>
                  </div>
                </div>
                <span
                  class="text-sm text-stone-500 transition-transform group-open:rotate-180"
                  >▼</span
                >
              </summary>
              <div
                class="space-y-4 border-t border-stone-800 p-6 text-stone-400"
              >
                <p class="leading-relaxed">
                  US federal legislation or EPA regulatory action establishes
                  nationwide PFAS framework, superseding state-level patchwork.
                  Canada aligns restrictions with US and EU approaches, creating
                  North American regulatory consistency. Mexico follows suit
                  under trade agreement pressures.
                </p>
                <div
                  class="rounded border border-stone-700 bg-stone-900/50 p-4"
                >
                  <h5 class="mb-2 font-semibold text-stone-300">
                    Strategic Implication
                  </h5>
                  <p class="text-sm leading-relaxed">
                    North American manufacturers lose home market regulatory
                    advantages. Organisations delaying transition based on US
                    political uncertainty face compressed timelines and limited
                    alternative availability.
                  </p>
                </div>
              </div>
            </details>

            <!-- Phase 4 -->
            <details
              class="group rounded-xl border border-stone-800 bg-stone-800/30"
            >
              <summary
                class="flex cursor-pointer items-center justify-between p-6 font-semibold text-stone-200 hover:text-amber-400"
              >
                <div class="flex items-center gap-4">
                  <span
                    class="flex h-10 w-10 items-center justify-center rounded-full bg-amber-400/10 text-sm font-black text-amber-400"
                    >04</span
                  >
                  <div>
                    <div>2029–2030: Asian Market Restrictions</div>
                    <div class="text-sm font-normal text-stone-400">
                      Probability: 70%
                    </div>
                  </div>
                </div>
                <span
                  class="text-sm text-stone-500 transition-transform group-open:rotate-180"
                  >▼</span
                >
              </summary>
              <div
                class="space-y-4 border-t border-stone-800 p-6 text-stone-400"
              >
                <p class="leading-relaxed">
                  Japan, South Korea, and Taiwan implement PFAS restrictions
                  aligned with EU and North American frameworks. China
                  establishes domestic PFAS regulations balancing environmental
                  goals with manufacturing competitiveness, creating unique
                  compliance requirements that nevertheless restrict most
                  applications.
                </p>
                <div
                  class="rounded border border-stone-700 bg-stone-900/50 p-4"
                >
                  <h5 class="mb-2 font-semibold text-stone-300">
                    Strategic Implication
                  </h5>
                  <p class="text-sm leading-relaxed">
                    Global supply chains require universal PFAS-free
                    capabilities. Regional differentiation becomes impractical
                    as major markets converge on similar restrictions. Last
                    holdouts lose competitive positioning.
                  </p>
                </div>
              </div>
            </details>

            <!-- Phase 5 -->
            <details
              class="group rounded-xl border border-stone-800 bg-stone-800/30"
            >
              <summary
                class="flex cursor-pointer items-center justify-between p-6 font-semibold text-stone-200 hover:text-amber-400"
              >
                <div class="flex items-center gap-4">
                  <span
                    class="flex h-10 w-10 items-center justify-center rounded-full bg-amber-400/10 text-sm font-black text-amber-400"
                    >05</span
                  >
                  <div>
                    <div>2030–2032: Enforcement Intensification</div>
                    <div class="text-sm font-normal text-stone-400">
                      Probability: 80%
                    </div>
                  </div>
                </div>
                <span
                  class="text-sm text-stone-500 transition-transform group-open:rotate-180"
                  >▼</span
                >
              </summary>
              <div
                class="space-y-4 border-t border-stone-800 p-6 text-stone-400"
              >
                <p class="leading-relaxed">
                  Regulatory authorities shift from framework establishment to
                  active enforcement. Testing requirements expand from
                  manufacturer declarations to analytical verification.
                  Non-compliance penalties escalate. Supply chain liability
                  extends beyond direct manufacturers to importers, retailers,
                  and distributors.
                </p>
                <div
                  class="rounded border border-stone-700 bg-stone-900/50 p-4"
                >
                  <h5 class="mb-2 font-semibold text-stone-300">
                    Strategic Implication
                  </h5>
                  <p class="text-sm leading-relaxed">
                    Compliance documentation becomes critical business asset.
                    Organisations lacking systematic PFAS management face market
                    access barriers, customer rejection, and enforcement
                    actions. "PFAS-free" claims without verification create
                    liability exposure.
                  </p>
                </div>
              </div>
            </details>

            <!-- Phase 6 -->
            <details
              class="group rounded-xl border border-stone-800 bg-stone-800/30"
            >
              <summary
                class="flex cursor-pointer items-center justify-between p-6 font-semibold text-stone-200 hover:text-amber-400"
              >
                <div class="flex items-center gap-4">
                  <span
                    class="flex h-10 w-10 items-center justify-center rounded-full bg-amber-400/10 text-sm font-black text-amber-400"
                    >06</span
                  >
                  <div>
                    <div>2033–2035: Universal Compliance</div>
                    <div class="text-sm font-normal text-stone-400">
                      Probability: 60%
                    </div>
                  </div>
                </div>
                <span
                  class="text-sm text-stone-500 transition-transform group-open:rotate-180"
                  >▼</span
                >
              </summary>
              <div
                class="space-y-4 border-t border-stone-800 p-6 text-stone-400"
              >
                <p class="leading-relaxed">
                  PFAS becomes universally restricted across developed
                  economies. Limited exemptions remain for critical applications
                  where alternatives genuinely don't exist, subject to sunset
                  provisions and substitution plans. Developing economies adopt
                  restrictions under trade pressure and international
                  frameworks.
                </p>
                <div
                  class="rounded border border-stone-700 bg-stone-900/50 p-4"
                >
                  <h5 class="mb-2 font-semibold text-stone-300">
                    Strategic Implication
                  </h5>
                  <p class="text-sm leading-relaxed">
                    PFAS-free operations become baseline expectation rather than
                    competitive advantage. Market leaders established during
                    transition period maintain dominant positions. Late movers
                    face permanent competitive disadvantages from delayed
                    capability development.
                  </p>
                </div>
              </div>
            </details>
          </div>
        </div>
      </div>
    </section>

    <!-- Strategic Timeline -->
    <section class="pb-24">
      <div class="mx-auto max-w-3xl px-6 lg:px-8">
        <h2 class="mb-8 text-3xl font-black text-stone-100">
          Key Milestones 2025–2035
        </h2>

        <div class="mb-12 space-y-6 text-lg leading-relaxed text-stone-400">
          <p>
            Strategic planning requires understanding not just regulatory
            endpoints but implementation timelines determining when
            organisations must achieve compliance. This timeline synthesises
            confirmed regulations, proposed frameworks, and enforcement
            trajectories into actionable milestones.
          </p>
        </div>

        <!-- Timeline -->

        <!-- 2026 -->
        <div class="relative mt-12 space-y-12 border-l-2 border-stone-800 pl-8">
          <div class="space-y-4">
            <h3 class="text-2xl font-bold text-stone-200">2026</h3>
            <ul class="space-y-3 text-stone-400">
              <li class="flex items-start gap-3 text-stone-400">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span
                  >California AB 1200 (cookware PFAS ban) enforcement begins
                </span>
              </li>
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span
                  >Maine LD 1433 (all product categories) phase-in starts</span
                >
              </li>
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span
                  >EU REACH PFAS restriction proposal public consultation
                  concludes</span
                >
              </li>
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span
                  >Denmark implements national PFAS ban ahead of EU timeline</span
                >
              </li>
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span
                  >Minnesota HF 2310 (food packaging) takes effect January 2026</span
                >
              </li>
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span>EU member states vote on PFAS restriction proposal</span>
              </li>
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span
                  >Additional US states (Washington, Vermont, New York)
                  implement bans</span
                >
              </li>
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span>Norway and Sweden align with Denmark restrictions</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- 2027 -->
        <div class="relative mt-12 space-y-12 border-l-2 border-stone-800 pl-8">
          <div class="space-y-4">
            <h3 class="text-2xl font-bold text-stone-200">2027</h3>
            <ul class="space-y-3 text-stone-400">
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span
                  >EU PFAS restriction enters force (pending approval timeline)</span
                >
              </li>
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span
                  >Consumer product transition period begins (18-month
                  compliance window)</span
                >
              </li>
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span
                  >Canada proposes federal PFAS framework aligned with EU
                  approach</span
                >
              </li>
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span
                  >Japan begins regulatory consultations on PFAS restrictions</span
                >
              </li>
            </ul>
          </div>
        </div>

        <!-- 2028 -->
        <div class="relative mt-12 space-y-12 border-l-2 border-stone-800 pl-8">
          <div class="space-y-4">
            <h3 class="text-2xl font-bold text-stone-200">2028</h3>
            <ul class="space-y-3 text-stone-400">
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span
                  >EU consumer product PFAS ban fully enforced (18 months
                  post-entry)</span
                >
              </li>
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span
                  >US federal PFAS legislation expected (high probability)</span
                >
              </li>
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span>South Korea announces PFAS restriction framework</span>
              </li>
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
                />
                <span
                  >Major retailers (Walmart, Amazon, Target) require supplier
                  PFAS-free verification</span
                >
              </li>
            </ul>
          </div>
        </div>

        <!-- 2029 -->
        <div class="relative mt-12 space-y-12 border-l-2 border-stone-800 pl-8">
          <div class="space-y-4">
            <h3 class="text-2xl font-bold text-stone-200">2029</h3>
            <ul class="space-y-3 text-stone-400">
              <li class="flex items-start gap-3">
                <Icon
                  name="mdi:circle-small"
                  class="mt-1 h-5 w-5 shrink-0 text-amber-400"
