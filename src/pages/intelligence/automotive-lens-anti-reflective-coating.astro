---
import BaseLayout from '../../layout/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
import { blogPosts } from '../../data/blogPosts';
import MoreIntelligence from '../../components/MoreIntelligence.astro';
import IntelCTA from '../../components/IntelCTA.astro';

const article = blogPosts.find(
  (post) => post.url === '/intelligence/automotive-lens-anti-reflective-coating'
);

if (!article) {
  throw new Error('Article metadata not found in blogPosts.ts');
}

const publishDateFormatted = new Date(
  article.publishDateFull
).toLocaleDateString('en-GB', {
  month: 'short',
  year: 'numeric',
});

const currentDate = new Date().toISOString().split('T')[0];

const jsonLd = [
  {
    '@context': 'https://schema.org',
    '@type': 'Article',
    '@id': `https://lotus-nano.com${article.url}#article`,
    headline: article.blogtitle,
    description: article.blogdescr,
    image: {
      '@type': 'ImageObject',
      url: article.img,
      width: 1200,
      height: 630,
    },
    author: {
      '@type': 'Person',
      '@id': `https://lotus-nano.com${article.url}#author`,
      name: article.authorName,
      jobTitle: article.authorRole,
      image: {
        '@type': 'ImageObject',
        url: article.authorImage,
      },
    },
    publisher: {
      '@id': 'https://lotus-nano.com/#organization',
    },
    datePublished: article.publishDateFull,
    dateModified: currentDate,
    mainEntityOfPage: {
      '@type': 'WebPage',
      '@id': `https://lotus-nano.com${article.url}`,
    },
    isPartOf: {
      '@id': 'https://lotus-nano.com/intelligence#blog',
    },
    inLanguage: 'en-GB',
    articleSection: article.categoryFull,
  },
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    '@id': `https://lotus-nano.com${article.url}#breadcrumb`,
    itemListElement: [
      {
        '@type': 'ListItem',
        position: 1,
        name: 'Home',
        item: 'https://lotus-nano.com',
      },
      {
        '@type': 'ListItem',
        position: 2,
        name: 'Intelligence',
        item: 'https://lotus-nano.com/intelligence',
      },
      {
        '@type': 'ListItem',
        position: 3,
        name: article.blogtitle,
        item: `https://lotus-nano.com${article.url}`,
      },
    ],
  },
];
---

<BaseLayout
  title={article.blogtitle}
  description={article.blogdescr}
  canonical={`https://lotus-nano.com${article.url}`}
  ogImage={article.img}
  ogType="article"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    <meta property="article:author" content={article.authorName} />
    <meta property="article:published_time" content={article.publishDateFull} />
    <meta property="article:modified_time" content={currentDate} />
    <meta property="article:section" content={article.categoryFull} />
  </Fragment>

  <article class="bg-stone-900">
    <!-- Hero Image -->
    <section class="relative h-[70vh] min-h-[500px] overflow-hidden">
      <img
        src={article.img}
        alt={article.blogtitle}
        class="absolute inset-0 h-full w-full object-cover"
        loading="eager"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-stone-900 via-stone-900/60 to-transparent"
      >
      </div>
    </section>

    <!-- Header -->
    <section class="relative -mt-32 pb-24">
      <div class="mx-auto max-w-4xl px-6 lg:px-8">
        <div class="mb-8 flex items-center justify-between text-sm">
          <div class="flex items-center gap-3">
            <span class="font-semibold text-amber-400"
              >{article.categoryFull}</span
            >
            <span class="text-stone-600">·</span>
            <span class="text-stone-500">{publishDateFormatted}</span>
            <span class="text-stone-600">·</span>
            <span class="text-stone-500">{article.readTime} read</span>
          </div>
          <a
            href="/intelligence"
            class="text-stone-500 transition-colors hover:text-stone-300"
            >← Intelligence</a
          >
        </div>

        <h1
          class="mb-8 text-5xl font-black leading-[0.95] tracking-tighter text-stone-100 lg:text-7xl"
        >
          {article.blogtitle}
        </h1>

        <p
          class="mb-16 text-2xl font-light leading-relaxed text-stone-400 lg:text-3xl"
        >
          {article.blogdescr}
        </p>

        <div class="flex items-center gap-4 border-t border-stone-800 pt-8">
          <img
            src={article.authorImage}
            alt={article.authorName}
            class="h-12 w-12 rounded-full"
            width="48"
            height="48"
          />
          <div>
            <div class="font-semibold text-stone-200">{article.authorName}</div>
            <div class="text-sm text-stone-500">{article.authorRole}</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Executive Summary -->
    <section class="pb-24">
      <div class="mx-auto max-w-4xl px-6 lg:px-8">
        <div
          class="mb-12 rounded-2xl border-l-4 border-amber-400 bg-stone-800/30 p-8"
        >
          <h2
            class="mb-4 text-sm font-semibold uppercase tracking-wider text-amber-400"
          >
            Executive Summary
          </h2>
          <p class="mb-6 text-2xl font-light leading-relaxed text-stone-200">
            Automotive lighting systems face unprecedented efficiency
            challenges. Multi-lens assemblies suffer 10-15% cumulative light
            loss, thermal management failures, and sensor integration
            difficulties.
          </p>
          <p class="text-lg leading-relaxed text-stone-400">
            Advanced sol-gel anti-reflective coating technology addresses these
            challenges through systematic optical control, delivering 25%
            transmission improvements and 30x stray light reduction whilst
            meeting ECE regulatory requirements.
          </p>
        </div>

        <div class="grid gap-6 md:grid-cols-3">
          <div class="rounded-xl border border-stone-800 bg-stone-800/50 p-6">
            <Icon name="mdi:alert-circle" class="mb-4 h-8 w-8 text-red-400" />
            <h3 class="mb-2 text-lg font-bold text-stone-100">The Challenge</h3>
            <p class="text-sm leading-relaxed text-stone-400">
              Modern automotive lighting faces efficiency demands whilst
              accommodating stringent ECE regulations and sensor integration
              requirements.
            </p>
          </div>

          <div class="rounded-xl border border-stone-800 bg-stone-800/50 p-6">
            <Icon
              name="mdi:flask-outline"
              class="mb-4 h-8 w-8 text-amber-400"
            />
            <h3 class="mb-2 text-lg font-bold text-stone-100">The Solution</h3>
            <p class="text-sm leading-relaxed text-stone-400">
              Advanced sol-gel anti-reflective coating technology delivers
              systematic performance improvements through engineered optical
              control.
            </p>
          </div>

          <div class="rounded-xl border border-stone-800 bg-stone-800/50 p-6">
            <Icon name="mdi:check-circle" class="mb-4 h-8 w-8 text-green-400" />
            <h3 class="mb-2 text-lg font-bold text-stone-100">The Result</h3>
            <p class="text-sm leading-relaxed text-stone-400">
              Quantified performance improvements with regulatory compliance
              assurance and comprehensive implementation support.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Section 1: Automotive Lighting Challenges -->
    <section id="challenges" class="pb-24">
      <div class="mx-auto max-w-5xl px-6 lg:px-8">
        <div class="mb-6">
          <h2 class="mb-4 text-4xl font-black text-stone-100">
            Automotive Lighting Performance Challenges
          </h2>
          <p class="text-xl leading-relaxed text-stone-400">
            Engineering teams face unprecedented challenges as automotive
            lighting systems become increasingly complex whilst regulatory
            requirements intensify and sensor integration demands grow.
          </p>
        </div>

        <div class="mb-12 space-y-6 text-lg leading-relaxed text-stone-400">
          <p>
            Modern automotive lighting systems must deliver superior performance
            in increasingly compact designs whilst meeting stringent ECE
            regulatory requirements and supporting advanced sensor integration
            for ADAS applications.
          </p>
          <p class="font-medium text-stone-300">
            Multi-lens assemblies suffer cumulative light losses of 10-15%
            through Fresnel reflections. Thermal management becomes challenging
            in compact housings. Internal reflections create ghost images that
            compromise sensor accuracy and regulatory compliance.
          </p>
        </div>

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          <!-- Challenge 1 -->
          <div
            class="group rounded-lg border border-stone-800 p-6 transition-colors hover:border-amber-400/50"
          >
            <Icon
              name="mdi:file-document-alert"
              class="mb-4 h-8 w-8 text-red-400"
            />
            <h3 class="mb-3 text-lg font-bold text-stone-100">
              Regulatory Compliance Challenges
            </h3>
            <p class="mb-3 text-sm leading-relaxed text-stone-400">
              ECE R112 requirements become impossible to meet as light output
              drops below minimum thresholds in multi-lens systems.
            </p>
            <div
              class="rounded bg-red-900/20 px-3 py-1 text-xs font-bold text-red-400"
            >
              IMMEDIATE RISK
            </div>
          </div>

          <!-- Challenge 2 -->
          <div
            class="group rounded-lg border border-stone-800 p-6 transition-colors hover:border-amber-400/50"
          >
            <Icon name="mdi:fire" class="mb-4 h-8 w-8 text-red-400" />
            <h3 class="mb-3 text-lg font-bold text-stone-100">
              Thermal Management Breakdown
            </h3>
            <p class="mb-3 text-sm leading-relaxed text-stone-400">
              Lost photons convert to heat, creating thermal stress that reduces
              LED lifespan and compromises system reliability.
            </p>
            <div
              class="rounded bg-red-900/20 px-3 py-1 text-xs font-bold text-red-400"
            >
              RELIABILITY FAILURE
            </div>
          </div>

          <!-- Challenge 3 -->
          <div
            class="group rounded-lg border border-stone-800 p-6 transition-colors hover:border-amber-400/50"
          >
            <Icon name="mdi:camera-off" class="mb-4 h-8 w-8 text-red-400" />
            <h3 class="mb-3 text-lg font-bold text-stone-100">
              Sensor Integration Failure
            </h3>
            <p class="mb-3 text-sm leading-relaxed text-stone-400">
              Internal reflections create ghost images and signal noise,
              compromising ADAS performance and detection accuracy.
            </p>
            <div
              class="rounded bg-red-900/20 px-3 py-1 text-xs font-bold text-red-400"
            >
              SAFETY COMPROMISE
            </div>
          </div>

          <!-- Challenge 4 -->
          <div
            class="group rounded-lg border border-stone-800 p-6 transition-colors hover:border-amber-400/50"
          >
            <Icon name="mdi:currency-usd" class="mb-4 h-8 w-8 text-red-400" />
            <h3 class="mb-3 text-lg font-bold text-stone-100">
              Cost Escalation Spiral
            </h3>
            <p class="mb-3 text-sm leading-relaxed text-stone-400">
              Higher power requirements and complex thermal management drive
              exponential cost increases across the entire system.
            </p>
            <div
              class="rounded bg-red-900/20 px-3 py-1 text-xs font-bold text-red-400"
            >
              ECONOMIC IMPACT
            </div>
          </div>

          <!-- Challenge 5 -->
          <div
            class="group rounded-lg border border-stone-800 p-6 transition-colors hover:border-amber-400/50"
          >
            <Icon name="mdi:map-marker-off" class="mb-4 h-8 w-8 text-red-400" />
            <h3 class="mb-3 text-lg font-bold text-stone-100">
              Market Access Loss
            </h3>
            <p class="mb-3 text-sm leading-relaxed text-stone-400">
              Systems failing to meet regional lighting standards face immediate
              market exclusion, threatening entire product lines.
            </p>
            <div
              class="rounded bg-red-900/20 px-3 py-1 text-xs font-bold text-red-400"
            >
              BUSINESS RISK
            </div>
          </div>

          <!-- Challenge 6 -->
          <div
            class="group rounded-lg border border-stone-800 p-6 transition-colors hover:border-amber-400/50"
          >
            <Icon
              name="mdi:chart-line-variant"
              class="mb-4 h-8 w-8 text-red-400"
            />
            <h3 class="mb-3 text-lg font-bold text-stone-100">
              Competitive Disadvantage
            </h3>
            <p class="mb-3 text-sm leading-relaxed text-stone-400">
              OEMs solving these challenges gain decisive advantages in
              efficiency, performance, and system integration capabilities.
            </p>
            <div
              class="rounded bg-red-900/20 px-3 py-1 text-xs font-bold text-red-400"
            >
              STRATEGIC THREAT
            </div>
          </div>
        </div>

        <div
          class="mt-12 rounded-2xl border-2 border-red-400/30 bg-red-900/10 p-8"
        >
          <div class="flex items-start gap-4">
            <Icon
              name="mdi:alert-circle"
              class="mt-1 h-8 w-8 flex-shrink-0 text-red-400"
            />
            <div>
              <h4 class="mb-3 text-xl font-bold text-stone-100">
                These Challenges Require Systematic Solutions
              </h4>
              <p class="text-lg leading-relaxed text-stone-300">
                These cascading failures require comprehensive technical
                intervention. Traditional approaches fail because they address
                symptoms rather than the fundamental cause: systematic light
                loss through uncontrolled Fresnel reflections.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Section 2: Sol-Gel Technology Solution -->
    <section id="solution" class="pb-24">
      <div class="mx-auto max-w-5xl px-6 lg:px-8">
        <div class="mb-16">
          <h2 class="mb-4 text-4xl font-black text-stone-100">
            Sol-Gel Anti-Reflective Technology
          </h2>
          <p class="text-xl leading-relaxed text-stone-400">
            Advanced wet-chemistry coating technology engineered specifically to
            solve automotive optical challenges through systematic reflection
            control and proven durability.
          </p>
        </div>

        <div class="mb-12 grid gap-12 lg:grid-cols-2">
          <!-- Technology Process -->
          <div class="rounded-xl border border-stone-800 bg-stone-800/50 p-8">
            <Icon
              name="mdi:flask-outline"
              class="mb-6 h-12 w-12 text-amber-400"
            />
            <h3 class="mb-6 text-2xl font-bold text-stone-100">
              Advanced Sol-Gel Process
            </h3>
            <div class="space-y-4 text-stone-400">
              <p>
                Precision wet-chemistry coating technology utilising advanced
                sol-gel dip-coating processes for efficient treatment of complex
                automotive optical components including glass, polycarbonate,
                PMMA, and sapphire substrates.
              </p>
              <p>
                The technology creates destructive interference through
                engineered refractive index control, systematically eliminating
                reflected photons whilst maintaining automotive durability
                standards across extreme temperature ranges.
              </p>
            </div>
          </div>

          <!-- Performance Characteristics -->
          <div class="rounded-xl border border-stone-800 bg-stone-800/50 p-8">
            <Icon
              name="mdi:speedometer"
              class="mb-6 h-12 w-12 text-amber-400"
            />
            <h3 class="mb-6 text-2xl font-bold text-stone-100">
              Automotive Performance Characteristics
            </h3>
            <div class="space-y-4 text-stone-400">
              <p>
                Engineered specifically for automotive applications with
                comprehensive material compatibility across polycarbonate, PMMA,
                glass, and sapphire substrates used in modern vehicle lighting
                and sensor systems.
              </p>
              <p>
                Temperature stability from -40°C to +120°C ensures reliable
                performance under extreme automotive operating conditions whilst
                maintaining ECE regulatory compliance and long-term durability.
              </p>
            </div>
          </div>
        </div>

        <!-- Technical Specifications -->
        <div class="rounded-2xl border border-stone-800 bg-stone-800/30 p-12">
          <h3
            class="mb-8 text-center text-3xl font-bold text-stone-100 lg:text-4xl"
          >
            Technical Performance Specifications
          </h3>
          <div class="mx-auto max-w-4xl">
            <div class="mb-8 grid gap-8 md:grid-cols-3">
              <div class="text-center">
                <div class="mb-2 text-5xl font-black text-amber-400">25%</div>
                <div class="text-sm text-stone-500">
                  Max Light Transmission Improvement
                </div>
              </div>
              <div class="text-center">
                <div class="mb-2 text-5xl font-black text-amber-400">30x</div>
                <div class="text-sm text-stone-500">
                  Max Stray Light Reduction
                </div>
              </div>
              <div class="text-center">
                <div class="mb-2 text-5xl font-black text-amber-400">
                  -40/120°C
                </div>
                <div class="text-sm text-stone-500">Temperature Range</div>
              </div>
            </div>
            <p class="mb-6 text-lg leading-relaxed text-stone-300">
              Quantified engineering improvements addressing key automotive
              optical challenges through systematic reflection control and
              advanced material science with proven automotive durability.
            </p>
            <p class="text-lg leading-relaxed text-stone-400">
              Comprehensive solution for automotive lighting efficiency, sensor
              integration, and regulatory compliance requirements across all
              automotive optical applications.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Section 3: Technology Landscape -->
    <section id="landscape" class="pb-24">
      <div class="mx-auto max-w-5xl px-6 lg:px-8">
        <div class="mb-16">
          <h2 class="mb-4 text-4xl font-black text-stone-100">
            Automotive AR Technology Landscape
          </h2>
          <p class="text-xl leading-relaxed text-stone-400">
            Technical comparison of anti-reflective coating technologies
            currently deployed in automotive lens applications with cost
            analysis and implementation complexity assessment.
          </p>
        </div>

        <!-- Cost Comparison -->
        <div
          class="mb-12 rounded-2xl border border-stone-800 bg-stone-800/30 p-8"
        >
          <h3 class="mb-8 text-center text-2xl font-bold text-stone-100">
            Current Automotive Lens Coating Technologies
          </h3>

          <div class="space-y-6">
            <!-- Sol-Gel -->
            <div class="flex flex-col gap-4 sm:flex-row sm:items-center">
              <div class="w-full flex-shrink-0 text-left sm:w-36 sm:text-right">
                <p class="font-bold text-stone-100">Sol-Gel AR</p>
                <p class="text-sm text-amber-400">Next generation</p>
              </div>
              <div
                class="relative h-10 flex-1 overflow-hidden rounded-full bg-stone-700"
              >
                <div
                  class="h-full rounded-full bg-gradient-to-r from-green-500 to-green-400 transition-all duration-500"
                  style="width: 25%"
                >
                </div>
                <div
                  class="absolute inset-0 flex items-center justify-start pl-4"
                >
                  <span class="text-xs font-bold text-white"
                    >COST OPTIMISED</span
                  >
                </div>
              </div>
              <div class="w-full flex-shrink-0 sm:w-24">
                <div
                  class="rounded border border-green-500/50 bg-green-900/30 px-3 py-1 text-center"
                >
                  <span class="text-xs font-bold text-green-400"
                    >LOWEST COST</span
                  >
                </div>
              </div>
            </div>

            <!-- Multi-layer Dielectric -->
            <div class="flex flex-col gap-4 sm:flex-row sm:items-center">
              <div class="w-full flex-shrink-0 text-left sm:w-36 sm:text-right">
                <p class="font-bold text-stone-100">Multi-layer Dielectric</p>
                <p class="text-sm text-stone-500">Industry standard</p>
              </div>
              <div
                class="relative h-10 flex-1 overflow-hidden rounded-full bg-stone-700"
              >
                <div
                  class="h-full rounded-full bg-gradient-to-r from-orange-500 to-red-500 transition-all duration-500"
                  style="width: 85%"
                >
                </div>
                <div
                  class="absolute inset-0 flex items-center justify-start pl-4"
                >
                  <span class="text-xs font-bold text-white"
                    >ESTABLISHED STANDARD</span
                  >
                </div>
              </div>
              <div class="w-full flex-shrink-0 sm:w-24">
                <div
                  class="rounded border border-red-500/50 bg-red-900/30 px-3 py-1 text-center"
                >
                  <span class="text-xs font-bold text-red-400">HIGHER COST</span
                  >
                </div>
              </div>
            </div>

            <!-- ALD -->
            <div class="flex flex-col gap-4 sm:flex-row sm:items-center">
              <div class="w-full flex-shrink-0 text-left sm:w-36 sm:text-right">
                <p class="font-bold text-stone-100">ALD Coatings</p>
                <p class="text-sm text-stone-500">Camera lenses</p>
              </div>
              <div
                class="relative h-10 flex-1 overflow-hidden rounded-full bg-stone-700"
              >
                <div
                  class="h-full rounded-full bg-gradient-to-r from-red-600 to-red-700 transition-all duration-500"
                  style="width: 100%"
                >
                </div>
                <div
                  class="absolute inset-0 flex items-center justify-start pl-4"
                >
                  <span class="text-xs font-bold text-white"
                    >SPECIALIST APPLICATION</span
                  >
                </div>
              </div>
              <div class="w-full flex-shrink-0 sm:w-24">
                <div
                  class="rounded border border-red-600/50 bg-red-900/30 px-3 py-1 text-center"
                >
                  <span class="text-xs font-bold text-red-400"
                    >HIGHEST COST</span
                  >
                </div>
              </div>
            </div>
          </div>

          <p class="mt-8 text-center text-sm italic text-stone-500">
            Current market positioning based on automotive lens coating industry
            analysis
          </p>
        </div>

        <div
          class="rounded-2xl border-2 border-amber-400/30 bg-amber-900/10 p-8"
        >
          <div class="flex items-start gap-4">
            <Icon
              name="mdi:clipboard-text"
              class="mt-1 h-8 w-8 flex-shrink-0 text-amber-400"
            />
            <div>
              <h4 class="mb-3 text-xl font-bold text-stone-100">
                Technology Selection Reality Check
              </h4>
              <p class="text-lg leading-relaxed text-stone-300">
                Whilst multi-layer dielectric coatings dominate the current
                market through established vacuum processes, sol-gel technology
                offers equivalent performance with significant cost advantages
                for automotive lens applications requiring production
                scalability and multi-substrate compatibility.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Section 4: Pain Relief Solutions Matrix -->
    <section id="solutions" class="pb-24">
      <div class="mx-auto max-w-6xl px-6 lg:px-8">
        <div class="mb-16">
          <h2 class="mb-4 text-4xl font-black text-stone-100">
            Systematic Pain Relief Solutions
          </h2>
          <p class="text-xl leading-relaxed text-stone-400">
            Engineering teams solving these key challenges through advanced
            sol-gel technology achieve quantified performance improvements
            whilst ensuring regulatory compliance and operational excellence.
          </p>
        </div>

        <div class="space-y-8">
          <!-- Solution 1 -->
          <div
            class="grid gap-6 rounded-xl border border-stone-800 bg-stone-800/30 p-8 lg:grid-cols-3"
          >
            <div>
              <Icon
                name="mdi:file-document-alert"
                class="mb-4 h-8 w-8 text-red-400"
              />
              <h3 class="mb-3 text-lg font-bold text-stone-100">
                Regulatory Compliance Challenges
              </h3>
              <p class="text-sm uppercase tracking-wider text-stone-500">
                ECE R112 Requirements
              </p>
              <div class="mt-4 rounded-lg bg-stone-800 p-4">
                <p
                  class="text-xs font-semibold uppercase tracking-wider text-stone-500"
                >
                  Business Impact
                </p>
                <p class="mt-2 text-sm text-stone-400">
                  Multi-lens systems dropping below minimum light output
                  thresholds, threatening market access across EU and key export
                  markets.
                </p>
              </div>
            </div>

            <div
              class="rounded-lg bg-gradient-to-b from-amber-900/20 to-stone-800/20 p-6 text-center"
            >
              <div
