  'Our proven 4-phase PFAS sourcing methodology delivers validated alternatives 50% faster. From deep requirements understanding to global supplier intelligence and clean handover.';

const jsonLd = [
  {
    '@context': 'https://schema.org',
    '@type': 'Service',
    '@id': 'https://lotus-nano.com/pfas-alternatives-sourcing#service',
    name: 'PFAS Substitutes Sourcing',
    description: description,
    url: 'https://lotus-nano.com/pfas-alternatives-sourcing',
    provider: {
      '@id': 'https://lotus-nano.com/#organization',
    },
    areaServed: {
      '@type': 'Place',
      name: 'Worldwide',
    },
    serviceType: 'PFAS Alternatives Sourcing',
    category: 'Environmental Consulting',
    offers: {
      '@type': 'Offer',
      description:
        '4-phase de-risking methodology for PFAS-free alternatives sourcing',
      availability: 'https://schema.org/InStock',
    },
  },
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    '@id': 'https://lotus-nano.com/pfas-alternatives-sourcing#breadcrumb',
    itemListElement: [
      {
        '@type': 'ListItem',
        position: 1,
        name: 'Home',
        item: 'https://lotus-nano.com',
      },
      {
        '@type': 'ListItem',
        position: 2,
        name: 'PFAS Substitutes Sourcing',
        item: 'https://lotus-nano.com/pfas-alternatives-sourcing',
      },
    ],
  },
];
