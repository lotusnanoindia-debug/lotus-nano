<BaseLayout
  title={title}
  description={description}
  canonical="https://lotus-nano.com/pfas-alternatives-sourcing"
  ogImage="https://the-knowledge-brokers.sirv.com/lotus-nano/lotus-nano-de-risk-approach.png?w=1200&h=630"
