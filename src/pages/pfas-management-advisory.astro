---
import BaseLayout from '../layout/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
import IntelCTA from '../components/IntelCTA.astro';

const title = 'PFAS Management Advisory | Lotus Nano';
const description =
  'Independent advisory for PFAS compliance: platform selection, workflow design, data architecture, supplier engagement, implementation.';

const jsonLd = [
  {
    '@context': 'https://schema.org',
    '@type': 'Service',
    '@id': 'https://lotus-nano.com/pfas-management-advisory#service',
    name: 'PFAS Management Advisory',
    description: description,
    url: 'https://lotus-nano.com/pfas-management-advisory',
    provider: {
      '@id': 'https://lotus-nano.com/#organization',
    },
    areaServed: {
      '@type': 'Place',
      name: 'Worldwide',
    },
    serviceType: 'PFAS Management Advisory Services',
  },
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    '@id': 'https://lotus-nano.com/pfas-management-advisory#breadcrumb',
    itemListElement: [
      {
        '@type': 'ListItem',
        position: 1,
        name: 'Home',
        item: 'https://lotus-nano.com',
      },
      {
        '@type': 'ListItem',
        position: 2,
        name: 'PFAS Management Advisory',
        item: 'https://lotus-nano.com/pfas-management-advisory',
      },
    ],
  },
];
---

<BaseLayout
  title={title}
  description={description}
  canonical="https://lotus-nano.com/pfas-management-advisory"
  ogImage="https://the-knowledge-brokers.sirv.com/lotus-nano/lotus-nano-og.jpg?w=1200&h=630"
  ogType="website"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  </Fragment>

  <article class="bg-stone-900">
    <!-- Hero -->
    <section class="relative pb-32 pt-32 lg:pb-48 lg:pt-48">
      <div class="mx-auto max-w-7xl px-6 lg:px-12">
        <div class="grid gap-16 lg:grid-cols-12 lg:gap-20">
          <div class="lg:col-span-7">
            <div
              class="mb-8 inline-flex items-center rounded-full border border-stone-700/50 bg-stone-800/50 px-4 py-2 text-sm font-medium text-stone-300 backdrop-blur-sm"
            >
              <div class="mr-3 h-2 w-2 rounded-full bg-amber-400"></div>
              PFAS Management Advisory
            </div>

            <h1
              class="mb-12 text-5xl font-black leading-[0.95] tracking-tighter text-stone-100 lg:text-7xl xl:text-8xl"
            >
              PFAS Management<br />That Works
            </h1>

            <p class="max-w-xl text-xl leading-relaxed text-stone-400">
              Advisory for PFAS compliance. From software selection, workflow
              design, data architecture, supplier engagement, to implementation
              support. Select and combine services as you need them.
            </p>
          </div>

          <div class="flex items-center lg:col-span-5">
            <figure class="relative w-full">
              <img
                src="https://the-knowledge-brokers.sirv.com/lotus-nano/pfas-software-advisory.jpg?w=600&sharpen=1"
                alt="PFAS management advisory"
                class="w-full rounded-2xl grayscale transition-all duration-700 hover:grayscale-0"
                width="600"
                height="400"
                loading="eager"
              />
            </figure>
          </div>
        </div>
      </div>
    </section>

    <!-- Advisory Services -->
    <section class="border-t border-stone-800/50 pb-24 pt-16">
      <div class="mx-auto max-w-7xl px-6 lg:px-12">
        <header class="mb-16 max-w-3xl">
          <h2
            class="mb-6 text-4xl font-black leading-tight tracking-tight text-stone-100 lg:text-6xl"
          >
            Advisory Services
          </h2>
          <p class="text-lg leading-relaxed text-stone-400">
            Independent advisory across five areas. Work with one service or
            combine multiple. Structured for organisations at any stage of PFAS
            management.
          </p>
        </header>

        <div class="space-y-6">
          <!-- Platform Selection -->
          <article
            class="group rounded-2xl border border-stone-700/50 bg-stone-800/30 transition-all duration-500 hover:border-amber-400/30 hover:bg-stone-800/50"
          >
            <div class="grid items-start gap-8 p-8 lg:grid-cols-12">
              <div class="lg:col-span-4">
                <div class="mb-4">
                  <Icon
                    name="mdi:application-cog-outline"
                    class="h-8 w-8 text-amber-400"
                  />
                </div>
                <h3 class="mb-3 text-2xl font-bold text-stone-100">
                  Platform Selection
                </h3>
                <p class="text-sm leading-relaxed text-stone-500">
                  Independent evaluation of compliance platforms. Match software
                  to your workflows, integration requirements, organisational
                  structure.
                </p>
              </div>

              <div class="lg:col-span-8">
                <div class="grid gap-4 sm:grid-cols-2">
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Requirements Analysis
                    </div>
                    <p class="text-xs text-stone-500">
                      Map approval chains, data flows, reporting cycles across
                      your organisation
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Platform Evaluation
                    </div>
                    <p class="text-xs text-stone-500">
                      Assess enterprise systems, specialist tools, integration
                      middleware against requirements
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Integration Assessment
                    </div>
                    <p class="text-xs text-stone-500">
                      Evaluate compatibility with ERP, PLM, QMS systems before
                      platform commitment
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Vendor Assessment
                    </div>
                    <p class="text-xs text-stone-500">
                      Test platforms with real scenarios. Independent evaluation
                      with no vendor biases
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </article>

          <!-- Workflow Design -->
          <article
            class="group rounded-2xl border border-stone-700/50 bg-stone-800/30 transition-all duration-500 hover:border-amber-400/30 hover:bg-stone-800/50"
          >
            <div class="grid items-start gap-8 p-8 lg:grid-cols-12">
              <div class="lg:col-span-4">
                <div class="mb-4">
                  <Icon
                    name="mdi:chart-timeline"
                    class="h-8 w-8 text-amber-400"
                  />
                </div>
                <h3 class="mb-3 text-2xl font-bold text-stone-100">
                  Workflow Design
                </h3>
                <p class="text-sm leading-relaxed text-stone-500">
                  Design approval routing, supplier engagement, documentation
                  validation. Build workflows that automate compliance cycles.
                </p>
              </div>

              <div class="lg:col-span-8">
                <div class="grid gap-4 sm:grid-cols-2">
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Process Documentation
                    </div>
                    <p class="text-xs text-stone-500">
                      Map current state operations, identify fragile
                      dependencies, document handoff points
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Supplier Orchestration
                    </div>
                    <p class="text-xs text-stone-500">
                      Design automated follow-ups, validation checks, escalation
                      protocols for supplier data
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Approval Architecture
                    </div>
                    <p class="text-xs text-stone-500">
                      Map decision authority, veto power, accountability
                      structures matching your organisation
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Validation Systems
                    </div>
                    <p class="text-xs text-stone-500">
                      Build completeness checks, data quality scoring, exception
                      handling for documentation
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </article>

          <!-- Data Architecture -->
          <article
            class="group rounded-2xl border border-stone-700/50 bg-stone-800/30 transition-all duration-500 hover:border-amber-400/30 hover:bg-stone-800/50"
          >
            <div class="grid items-start gap-8 p-8 lg:grid-cols-12">
              <div class="lg:col-span-4">
                <div class="mb-4">
                  <Icon
                    name="mdi:database-cog-outline"
                    class="h-8 w-8 text-amber-400"
                  />
                </div>
                <h3 class="mb-3 text-2xl font-bold text-stone-100">
                  Data Architecture
                </h3>
                <p class="text-sm leading-relaxed text-stone-500">
                  Structure PFAS data for operational visibility. Design
                  integration between compliance systems and production
                  infrastructure.
                </p>
              </div>

              <div class="lg:col-span-8">
                <div class="grid gap-4 sm:grid-cols-2">
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Data Model Design
                    </div>
                    <p class="text-xs text-stone-500">
                      Structure substance lists, product hierarchies, supplier
                      relationships for regulatory adaptation
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Integration Strategy
                    </div>
                    <p class="text-xs text-stone-500">
                      Connect compliance platforms to ERP, PLM, QMS systems
                      preventing manual data transfer
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Reporting Architecture
                    </div>
                    <p class="text-xs text-stone-500">
                      Design dashboards for compliance, alerts for production,
                      regulatory reports from unified data
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Audit Trail Systems
                    </div>
                    <p class="text-xs text-stone-500">
                      Build centralised documentation repository with
                      compliance-ready audit capabilities
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </article>

          <!-- Supplier Engagement -->
          <article
            class="group rounded-2xl border border-stone-700/50 bg-stone-800/30 transition-all duration-500 hover:border-amber-400/30 hover:bg-stone-800/50"
          >
            <div class="grid items-start gap-8 p-8 lg:grid-cols-12">
              <div class="lg:col-span-4">
                <div class="mb-4">
                  <Icon
                    name="mdi:account-multiple-outline"
                    class="h-8 w-8 text-amber-400"
                  />
                </div>
                <h3 class="mb-3 text-2xl font-bold text-stone-100">
                  Supplier Engagement
                </h3>
                <p class="text-sm leading-relaxed text-stone-500">
                  Design supplier data collection strategy. Survey design,
                  communication protocols, response optimisation for multi-tier
                  supply chains.
                </p>
              </div>

              <div class="lg:col-span-8">
                <div class="grid gap-4 sm:grid-cols-2">
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Survey Architecture
                    </div>
                    <p class="text-xs text-stone-500">
                      Design questionnaires for accurate responses based on
                      supplier capability levels
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Communication Strategy
                    </div>
                    <p class="text-xs text-stone-500">
                      Build multilingual workflows, supplier segmentation,
                      tailored outreach protocols
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Response Optimisation
                    </div>
                    <p class="text-xs text-stone-500">
                      Design automated reminders, validation checks, exception
                      routing maximising completion
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Multi-Tier Coordination
                    </div>
                    <p class="text-xs text-stone-500">
                      Structure data collection across supply network layers
                      without manual escalation
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </article>

          <!-- Implementation -->
          <article
            class="group rounded-2xl border border-stone-700/50 bg-stone-800/30 transition-all duration-500 hover:border-amber-400/30 hover:bg-stone-800/50"
          >
            <div class="grid items-start gap-8 p-8 lg:grid-cols-12">
              <div class="lg:col-span-4">
                <div class="mb-4">
                  <Icon
                    name="mdi:shield-check-outline"
                    class="h-8 w-8 text-amber-400"
                  />
                </div>
                <h3 class="mb-3 text-2xl font-bold text-stone-100">
                  Implementation
                </h3>
                <p class="text-sm leading-relaxed text-stone-500">
                  Deployment planning, change management, capability transfer.
                  Implementation oversight building your independent operational
                  capability.
                </p>
              </div>

              <div class="lg:col-span-8">
                <div class="grid gap-4 sm:grid-cols-2">
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Deployment Strategy
                    </div>
                    <p class="text-xs text-stone-500">
                      Design phased rollout, risk mitigation, parallel operation
                      preventing disruption
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Change Management
                    </div>
                    <p class="text-xs text-stone-500">
                      Build stakeholder alignment, training programmes, adoption
                      tracking before deployment
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Knowledge Transfer
                    </div>
                    <p class="text-xs text-stone-500">
                      Document processes, train internal teams, transfer
                      operational capability
                    </p>
                  </div>
                  <div
                    class="rounded-lg border border-stone-700/50 bg-stone-800/50 p-4"
                  >
                    <div class="mb-1 text-sm font-semibold text-stone-200">
                      Performance Validation
                    </div>
                    <p class="text-xs text-stone-500">
                      Establish metrics, baseline measurement, success criteria
                      validating deployment
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </article>
        </div>
      </div>
    </section>

    <!-- How Advisory Works -->
    <section class="border-t border-stone-800/50 pb-24 pt-16">
      <div class="mx-auto max-w-6xl px-6 lg:px-12">
        <header class="mb-16 max-w-3xl">
          <h2
            class="mb-6 text-4xl font-black leading-tight tracking-tight text-stone-100 lg:text-6xl"
          >
            How Advisory Works
          </h2>
        </header>

        <div class="grid gap-6 md:grid-cols-3">
          <article
            class="rounded-xl border border-stone-700/50 bg-stone-800/30 p-8 transition-all hover:border-amber-400/30"
          >
            <div
              class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-amber-600/20"
            >
              <Icon name="mdi:crosshairs-gps" class="h-6 w-6 text-amber-400" />
            </div>
            <h3 class="mb-3 text-xl font-bold text-stone-100">
              Modular Engagement
            </h3>
            <p class="text-sm leading-relaxed text-stone-500">
              Select individual services or combine multiple areas. Advisory
              adapts to your current requirements, not prescribed packages.
            </p>
          </article>

          <article
            class="rounded-xl border border-stone-700/50 bg-stone-800/30 p-8 transition-all hover:border-amber-400/30"
          >
            <div
              class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-amber-600/20"
            >
              <Icon name="mdi:timer-outline" class="h-6 w-6 text-amber-400" />
            </div>
            <h3 class="mb-3 text-xl font-bold text-stone-100">
              Time-Boxed Projects
            </h3>
            <p class="text-sm leading-relaxed text-stone-500">
              Defined scope, agreed duration, clear and measurable deliverables.
              Platform selection completed in weeks. Implementation designed for
              your team ready to execute.
            </p>
          </article>

          <article
            class="rounded-xl border border-stone-700/50 bg-stone-800/30 p-8 transition-all hover:border-amber-400/30"
          >
            <div
              class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-amber-600/20"
            >
              <Icon name="mdi:shield-check" class="h-6 w-6 text-amber-400" />
            </div>
            <h3 class="mb-3 text-xl font-bold text-stone-100">
              Independent Evaluation
            </h3>
            <p class="text-sm leading-relaxed text-stone-500">
              Recommendations based on your workflow requirements and
              integration constraints. No vendor biases or platform
              partnerships.
            </p>
          </article>
        </div>
      </div>
    </section>
    <IntelCTA />
  </article>
</BaseLayout>
