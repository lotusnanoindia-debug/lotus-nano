---
import BaseLayout from '../layout/BaseLayout.astro';
import { Icon } from 'astro-icon/components';

const title = 'Contact | Lotus Nano';
const description =
  'Connect with Lotus Nano for PFAS alternatives sourcing and management advisory.';

const jsonLd = [
  {
    '@context': 'https://schema.org',
    '@type': 'ContactPage',
    '@id': 'https://lotus-nano.com/contact#webpage',
    name: 'Contact Lotus Nano',
    url: 'https://lotus-nano.com/contact',
    description: description,
    inLanguage: 'en-GB',
    isPartOf: {
      '@id': 'https://lotus-nano.com/#website',
    },
  },
];
---

<BaseLayout
  title={title}
  description={description}
  canonical="https://lotus-nano.com/contact"
  ogImage="https://the-knowledge-brokers.sirv.com/lotus-nano/lotus-nano-og.jpg"
  ogType="website"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
    <script src="https://server.fillout.com/embed/v1/"></script>
  </Fragment>

  <article class="relative min-h-screen bg-stone-900 pt-32 lg:pt-48">
    <div class="relative mx-auto max-w-6xl px-6 py-16 lg:px-12 lg:py-20">
      <!-- Minimal Header -->
      <header class="mb-16">
        <h1
          class="mb-6 text-5xl font-black leading-tight tracking-tighter text-stone-100 lg:text-6xl"
        >
          Contact
          <br />
          <span
            class="text-5xl font-black tracking-tight text-stone-100 transition-colors duration-300 group-hover:text-amber-200 lg:text-6xl"
          >
            lotus nano
          </span>
          <span class="-m-1 text-5xl text-teal-500 lg:text-6xl">.</span>
        </h1>
        <p class="max-w-2xl text-base leading-relaxed text-stone-500">
          Done in 2 minutes: Book a call or fill out our form. We respond within
          24 hours.
        </p>
      </header>

      <!-- Direct Contact Methods -->
      <section class="mb-40 pb-16">
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
          <a
            href="tel:+919579103930"
            data-obfuscation="0"
            class="group flex items-center justify-center gap-2 border border-stone-700 p-3 text-sm text-stone-400 transition-colors hover:border-amber-400 hover:text-amber-400"
          >
            <Icon
              name="mdi:phone"
              class="h-4 w-4 text-stone-400 transition-colors group-hover:text-amber-400"
            />
            <span>(+91) 95791 03930</span>
          </a>

          <a
            href="mailto:info@lotus-nano.com"
            data-obfuscation="0"
            class="group flex items-center justify-center gap-2 border border-stone-700 p-3 text-sm text-stone-400 transition-colors hover:border-amber-400 hover:text-amber-400"
          >
            <Icon
              name="mdi:email"
              class="h-4 w-4 text-stone-400 transition-colors group-hover:text-amber-400"
            />
            <span>info@lotus-nano.com</span>
          </a>

          <a
            href="https://wa.me/919579103930"
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center justify-center gap-2 border border-stone-700 p-3 text-sm text-stone-400 transition-colors hover:border-green-600 hover:text-green-600"
          >
            <Icon
              name="mdi:whatsapp"
              class="h-4 w-4 text-stone-400 transition-colors group-hover:text-green-600"
            />
            <span>WhatsApp</span>
          </a>

          <div
            class="flex items-center justify-center gap-2 border border-stone-700 p-3 text-sm text-stone-400"
          >
            <Icon name="mdi:map-marker" class="h-5 w-5 text-stone-400" />
            <span class="text-sm">Pune, India</span>
          </div>
        </div>
      </section>

      <!-- Tab Navigation -->
      <nav class="mb-8 flex gap-8">
        <button
          id="tab-call"
          class="tab-button active border-b-2 border-amber-400 pb-2 text-sm font-semibold text-stone-100 transition-colors"
        >
          <Icon name="mdi:calendar" class="mr-1 inline-block h-4 w-4" />
          Book a Call
        </button>
        <button
          id="tab-message"
          class="tab-button border-b-2 border-transparent pb-2 text-sm font-semibold text-stone-400 transition-colors hover:text-stone-400"
        >
          <Icon name="mdi:pen" class="mr-1 inline-block h-4 w-4" />
          Write to Us
        </button>
      </nav>

      <!-- Tab Content -->
      <div class="relative">
        <!-- Calendar Tab -->
        <div id="content-call" class="tab-content">
          <div class="overflow-hidden rounded border border-stone-800/50">
            <iframe
              src="https://forms.fillout.com/t/qeTbTZtHs8us"
              width="100%"
              height="1000px"
              style="border: none;"
              title="Lotus Nano Book a Consultation"></iframe>
          </div>
        </div>

        <!-- Message Tab -->
        <div id="content-message" class="tab-content hidden">
          <div class="overflow-hidden rounded border border-stone-800/50">
            <iframe
              src="https://forms.fillout.com/t/8F9rw7E4UBus"
              width="100%"
              height="1000px"
              style="border: none;"
              title="Lotus Nano Contact Form"></iframe>
          </div>
        </div>
      </div>
    </div>
  </article>
</BaseLayout>

<script>
  // Tab switching
  const tabCall = document.getElementById('tab-call');
  const tabMessage = document.getElementById('tab-message');
  const contentCall = document.getElementById('content-call');
  const contentMessage = document.getElementById('content-message');

  function switchTab(
    activeTab: HTMLElement,
    activeContent: HTMLElement,
    inactiveTab: HTMLElement,
    inactiveContent: HTMLElement
  ) {
    // Update tab buttons
    activeTab.classList.add('active', 'border-amber-400', 'text-stone-100');
    activeTab.classList.remove('border-transparent', 'text-stone-400');

    inactiveTab.classList.remove(
      'active',
      'border-amber-400',
      'text-stone-100'
    );
    inactiveTab.classList.add('border-transparent', 'text-stone-400');

    // Update content
    activeContent.classList.remove('hidden');
    inactiveContent.classList.add('hidden');
  }

  tabCall?.addEventListener('click', () => {
    if (tabMessage && contentCall && contentMessage) {
      switchTab(tabCall, contentCall, tabMessage, contentMessage);
    }
  });

  tabMessage?.addEventListener('click', () => {
    if (tabCall && contentCall && contentMessage) {
      switchTab(tabMessage, contentMessage, tabCall, contentCall);
    }
  });
</script>
